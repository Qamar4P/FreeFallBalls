<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pt.isec.tp.am"
    android:versionCode="4"
    android:versionName="1.6.1" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="7" />

    <application
        android:name="com.android.tools.fd.runtime.BootstrapApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <receiver android:name="pt.isec.tp.am.BateryLow" >
            <intent-filter>
                <action android:name="android.intent.action.BATTERY_LOW" />
            </intent-filter>
        </receiver>

        <activity
            android:name="pt.isec.tp.am.TP_AMActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="pt.isec.tp.am.GameActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="pt.isec.tp.am.UpdatePerferences"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="pt.isec.tp.am.MyPreferencesActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="pt.isec.tp.am.About"
            android:screenOrientation="portrait" />
        <activity
            android:name="pt.isec.tp.am.Score"
            android:screenOrientation="portrait" />
        <activity
            android:name="pt.isec.tp.am.Help"
            android:screenOrientation="portrait" />
    </application>

</manifest>